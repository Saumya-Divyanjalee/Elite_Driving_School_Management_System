                </rowConstraints>

                <VBox.margin>
                    <Insets bottom="5.0" />
                </VBox.margin>

                <children>
                    <Label prefHeight="17.0" prefWidth="101.0" style="-fx-font-weight: bold;" text="Course ID :" textFill="black" GridPane.columnIndex="0" GridPane.rowIndex="0" />

            <GridPane hgap="10" minHeight="80.0" prefHeight="200.0" prefWidth="80.0" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="150.0" />
                    <ColumnConstraints maxWidth="200.0" minWidth="300.0" prefWidth="200.0" />
                    <ColumnConstraints minWidth="150.0" />

                     <Font name="System Bold" size="12.0" />
                  </font>
               </Label>
               <Label fx:id="lblLessonID" text="1" GridPane.columnIndex="3" />
               <Label style="-fx-font-weight: bold;" text="Instructor ID :" GridPane.columnIndex="2" GridPane.rowIndex="1" />
               <Label style="-fx-font-weight: bold;" text="Student ID : " GridPane.columnIndex="2" GridPane.rowIndex="2" />
               <Label fx:id="lblInstructorID" text="1" GridPane.columnIndex="3" GridPane.rowIndex="1" />
               <Label fx:id="lblStudentID" text="1" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                </children>
            </GridPane>

            <HBox alignment="CENTER" prefHeight="21.0" prefWidth="1228.0" spacing="10">
                <Button fx:id="btnSave" onAction="#saveOnAction" prefHeight="32.0" prefWidth="150.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;" text="Save">

                    <Label prefHeight="17.0" prefWidth="101.0" style="-fx-font-weight: bold;" text="Course Name :" textFill="black" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="txtCourseName" promptText="Bus Driving" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label prefHeight="17.0" prefWidth="101.0" style="-fx-font-weight: bold;" text="Time Period :" textFill="black" GridPane.rowIndex="2" />
